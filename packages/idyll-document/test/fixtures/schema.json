    "children": []
  },
  {
    "component": "Display",
    "id": "dynamicObjectDisplay",
    "__expr__": {
      "value": "{ dynamic: x }"
    },
    "value": "{ dynamic: x }",
    "children": []
  },
  {
    "component": "Display",
    "id": "dataDisplay",
    "__expr__": {
      "value": "myData"
    },
    "value": "myData",
    "children": []
